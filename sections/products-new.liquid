{% liquid
  assign products = collections.all.products | sort: 'id' | reverse
%}

<div class="lg:mx-32 md:mx-16 mx-8 lg:py-20 md:py-16 py-10">
  <div class="text-center">
    <p>Checkout the Lastest Motorcycles</p>
    <h2 class="pt-4 font-bold text-3xl">Newest Motorcycles</h2>
    <p class="pt-2 text-4xl group-hover:text-white">-</p>
  </div>
  <div class="owl-carousel owl-theme">
    {% for product in products limit: 3 %}
      <div class="item lg:h-96 md:h-full md:px-16">
        <div class="mt-10 grid grid-cols-12 gap-4 h-full">
          <div
            class="lg:col-span-7 col-span-12 bg-contain bg-no-repeat bg-center lg:h-full h-80"
            style="background-image: url('{{ product.featured_image | image_url }}');"
          ></div>
          <div class="lg:col-span-5 col-span-12 h-full">
            <div class="inline-block align-middle">
              <h2 class="pb-4 text-2xl font-bold">{{ product.title }}</h2>
              <span class="py-4 leading-7">{{ product.description | truncate: 450 }}</span>
              <p class="mt-8">
                <a
                  href="{{ product.url }}"
                  class="lg:p-5 p-3 bg-indigo-800 text-white rounded hover:bg-indigo-900 transition duration-300"
                  >View Details</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
