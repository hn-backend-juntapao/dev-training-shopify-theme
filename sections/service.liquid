{% style %}
  .single-service-item p:before {
    position: absolute;
    content: '';
    width: 20px;
    height: 3px;
    background: #3030ea;
    bottom: 0;
    left: 50%;
    margin-left: -10px;
  }
{% endstyle %}

<div class="lg:mx-32 md:mx-16 mx-2 lg:py-20 md:py-16 py-10">
  <div class="md:px-6 grid lg:grid-cols-3 sm:grid-cols-1 gap-6 text-center">
    <div class="py-12 group border p-10 hover:bg-indigo-800 transition duration-300">
      <p class="group-hover:font-white w-1/3 mx-auto">{% render 'icon-motorcycle' %}</p>
      <h2 class="group-hover:text-white transition text-xl">{{ section.settings.service_title_1 }}</h2>
      <p class="pt-8 text-gray-800 group-hover:text-white transition">{{ section.settings.service_text_1 }}</p>
      <p class="pt-4 text-4xl group-hover:text-white">-</p>
    </div>
    <div class="py-12 group border p-10 hover:bg-indigo-800 transition duration-300">
      <p class="group-hover:font-white w-1/3 mx-auto">{% render 'icon-motorcycle' %}</p>
      <h2 class="group-hover:text-white transition text-xl">{{ section.settings.service_title_2 }}</h2>
      <p class="pt-8 text-gray-800 group-hover:text-white transition">{{ section.settings.service_text_2 }}</p>
      <p class="pt-4 text-4xl group-hover:text-white">-</p>
    </div>
    <div class="py-12 group border p-10 hover:bg-indigo-800 transition duration-300">
      <div class="border-top single-service-item">
        <p class="group-hover:font-white w-1/3 mx-auto">{% render 'icon-motorcycle' %}</p>
        <h2 class="group-hover:text-white transition text-xl">{{ section.settings.service_title_3 }}</h2>
        <p class="pt-8 text-gray-800 group-hover:text-white transition">{{ section.settings.service_text_3 }}</p>
        <p class="pt-4 text-4xl group-hover:text-white">-</p>
      </div>
    </div>
  </div>
</div>

